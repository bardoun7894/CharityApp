<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#EDEFE3"
    tools:context=".NewsActivity">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:paddingTop="30dp"
                android:id="@+id/lastimageId"
                android:src="@drawable/gallery"
                android:layout_width="wrap_content"
                android:layout_height="300dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lasttitleId"
                    android:fontFamily="@font/mohammad"
                    android:text=" أضف خبرا جديدا "
                    android:textColor="#59A869"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:id="@+id/lastbodyId"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mohammad"
                    android:text=" أضف خبرا جديدا "
                    android:textColor="#682A31"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:id="@+id/lastdateid"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mohammad"
                    android:text="10/22/2019"

                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/lasttimeId"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mohammad"
                    android:text="10/22/2019"

                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mohammad"
                    android:text="تاريخ :"
                    android:textColor="#196332"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>





        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>