<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFE3"
    tools:context=".Others">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/backId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/left_arrow" />
            <Space
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView

                android:id="@+id/dashbordId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/dashboard_d" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logoback" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#7B5052"
                android:fontFamily="@font/mohammad"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="المرجو  كتابة الاشياء التي تريد ان تتبرع بها"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText

                 android:shadowColor="@color/colorPrimary"
                android:layout_marginTop="30dp"
                android:id="@+id/writeOthersEt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="   اكتب هنا . . ."
                android:ems="10"
                android:background="@color/design_default_color_on_primary"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/sendOthersId"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/mohammad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="إر سال"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>